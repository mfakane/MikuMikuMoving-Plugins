<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net461</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>Linearstar.MikuMikuMoving.AnimateCaptionPlugin</RootNamespace>
    <UseWindowsForms>true</UseWindowsForms>
    <ImportWindowsDesktopTargets>true</ImportWindowsDesktopTargets>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <Configurations>Debug;Release</Configurations>
    <Version>0.3</Version>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="AnimateCaptionPlugin.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <EmbeddedResource Include="Resources\AnimateCaptionPlugin20.png" LogicalName="Icon20" />
    <EmbeddedResource Include="Resources\AnimateCaptionPlugin32.png" LogicalName="Icon32" />
  </ItemGroup>
  <Import Project="..\PluginFramework\PluginFramework.projitems" Label="Shared" />
</Project>